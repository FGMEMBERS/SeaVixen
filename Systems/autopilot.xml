<?xml version="1.0"?>

<!-- Sea Vixen Autopilot Configuration -->

<!-- Each component is evaluated in the order specified.  You can make up -->
<!-- property names to pass the result of one component on to a subsequent -->
<!-- component. -->


<PropertyList>

  <!-- =============================================================== -->
  <!-- Autostab Modes                                                 -->
  <!-- =============================================================== -->

  <!-- Yaw Damper -->

  <filter>
    <name>Yaw Rate filter</name>
    <debug>false</debug>
    <type>exponential</type>
    <input>/instrumentation/master-reference-gyro/indicated-hdg-rate-degps</input>
    <output>/autopilot/internal/hdg-rate-degps-filtered</output>
    <filter-time>0.2</filter-time>
  </filter>
  
	<predict-simple>
		<name>Mach predictor-10</name>
		<debug>false</debug>
		<input>velocities/mach</input>
		<seconds>10</seconds>
		<filter-gain>0</filter-gain>
		<output>autopilot/internal/lookahead-10-sec-mach</output>
	</predict-simple>
	
	<predict-simple>
		<name>Mach predictor-5</name>
		<debug>false</debug>
		<input>velocities/mach</input>
		<seconds>5</seconds>
		<filter-gain>0</filter-gain>
		<output>autopilot/internal/lookahead-5-sec-mach</output>
	</predict-simple>
 
 
  <pid-controller>
    <name>Yaw Damper (Master Reference Gyro based)</name>
    <debug>false</debug>
    <enable>
      <prop>autopilot/locks/yaw-stab</prop>
      <value>yaw-stab</value>
    </enable>
    <input>
      <prop>instrumentation/master-reference-gyro/indicated-hdg-rate-degps</prop>
    </input>
    <reference>
      <value>0</value>
    </reference>
    <output>
      <prop>autopilot/internal/rudder-stab</prop>
    </output>
    <config>
      <Kp>0.10</Kp>
      <beta>-1</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-0.75</u_min>
      <u_max>0.75</u_max>
    </config>
  </pid-controller>
  
  <!-- Pitch Damper -->

  <filter>
    <name>Pitch Hold filter</name>
    <debug>false</debug>
    <type>double-exponential</type>
    <input>instrumentation/master-reference-gyro/indicated-pitch-deg</input>
    <output>/autopilot/internal/pitch-filtered</output>
    <filter-time>1.0</filter-time>
  </filter>

  <pid-controller>
    <name>Pitch hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/pitch-stab</prop>
      <value>pitch-stab</value>
    </enable>
    <input>
	  <prop>instrumentation/master-reference-gyro/indicated-pitch-deg</prop>
    </input>
    <reference>
	<prop>autopilot/internal/pitch-filtered</prop>
    </reference>
    <output>
      <prop>autopilot/internal/elevon-stab</prop>
    </output>
    <config>
      <Kp>0.10</Kp>             <!-- proportional gain -->
      <beta>-0.5</beta>         <!-- input value weighing factor -->
      <alpha>0.1</alpha>        <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>        <!-- input value weighing factor for -->
                                <!-- unfiltered derivative error -->
      <Ti>1.0</Ti>              <!-- integrator time -->
      <Td>0.00001</Td>          <!-- derivator time -->
      <u_min>-0.4</u_min>       <!-- minimum output clamp -->
      <u_max>0.4</u_max>        <!-- maximum output clamp -->
    </config>
  </pid-controller>
  
  <!-- =============================================================== -->
  <!-- Autopilot Modes                                                 -->
  <!-- =============================================================== -->

  <!-- True Heading hold.  2 stage cascade controller. -->
  <filter>
    <name>Hdg Hold filter</name>
    <debug>false</debug>
    <type>double-exponential</type>
    <input>instrumentation/master-reference-gyro/heading-error-deg</input>
    <output>autopilot/internal/hdg-error-filtered</output>
    <filter-time>0.5</filter-time>
  </filter>


  <!-- Stage #1 sets target roll based on diff between current heading -->
  <!-- and target heading. -->
  <pid-controller>
    <name>True Heading Hold (MRG based) Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/heading</prop>
      <value>true-heading-hold</value>
    </enable>
    <input>
      <prop>autopilot/internal/hdg-error-filtered</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/target-roll-deg</prop>
    </output>
    <config>
      <Kp>-1.0</Kp>         <!-- proportional gain -->
      <beta>1</beta>     	<!-- input value weighing factor -->
      <alpha>0.1</alpha>    <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>    <!-- input value weighing factor for -->
                            <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>         <!-- integrator time -->
      <Td>0.00001</Td>      <!-- derivator time -->
      <u_min>-20.0</u_min>  <!-- minimum output clamp -->
      <u_max>20.0</u_max>   <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- Stage #2 drives the stbd rudder to achieve the desired roll deg. -->
  <pid-controller>
    <name>True Heading Hold (MRG based) Stage 2</name>
    <debug>false</debug>
    <enable>
      <prop>autopilot/locks/heading</prop>
      <value>true-heading-hold</value>
    </enable>
    <input>
      <prop>instrumentation/master-reference-gyro/indicated-roll-deg</prop>
    </input>
    <reference>
      <prop>autopilot/settings/target-roll-deg</prop>
    </reference>
    <output>
      <prop>autopilot/internal/rudder-trim</prop>
    </output>
    <config>
      <Kp>0.01</Kp>          <!-- proportional gain -->
      <beta>1</beta>      <!-- input value weighing factor -->
      <alpha>0.1</alpha>    <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>    <!-- input value weighing factor for -->
                            <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>         <!-- integrator time -->
      <Td>0.00001</Td>      <!-- derivator time -->
      <u_min>-1.0</u_min>   <!-- minimum output clamp -->
      <u_max>1.0</u_max>    <!-- maximum output clamp -->
    </config>
  </pid-controller>

  
  <!-- Altitude hold.  2 stage cascade controller. -->

  <!-- Stage #1 sets target rate of climb based on diff between current alt -->
  <!-- and target altitude. -->
  <pi-simple-controller>
    <name>Altitude Hold (Altimeter based) Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>autopilot/locks/speed</prop>
      <value>height-with-pitch-trim</value>
    </enable>
    <input>
      <prop>instrumentation/altimeter/indicated-altitude-ft</prop>
    </input>
    <reference>
      <prop>autopilot/settings/target-altitude-ft</prop>
    </reference>
    <output>
      <prop>autopilot/settings/target-climb-rate-fps</prop>
    </output>
    <config>
      	<Kp>0.3</Kp>      		<!-- proportional gain -->
		<Ki>0</Ki>      		<!-- integral gain -->
      	<u_min>-16.67</u_min> 	<!-- minimum output clamp -->
      	<u_max>8.33</u_max>		<!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <!-- Stage #2 drives the elevon-trim to achieve the desired climb rate. -->
  <pid-controller>
    <name>Altitude Hold (Altimeter based) Stage 2</name>
    <debug>false</debug>
    <enable>
      <prop>autopilot/locks/speed</prop>
      <value>height-with-pitch-trim</value>
    </enable>
    <input>
      <prop>instrumentation/vertical-speed-indicator/indicated-speed-fpm</prop>
    </input>
    <reference>
      <prop>autopilot/settings/target-climb-rate-fps</prop>
    </reference>
    <output>
      <prop>autopilot/internal/elevon-trim</prop>
    </output>
    <config>
      <Kp>0.001</Kp>          <!-- proportional gain -->
      <beta>1</beta>        <!-- input value weighing factor -->
      <alpha>0.01</alpha>      <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>      <!-- input value weighing factor for -->
                              <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>           <!-- integrator time -->
      <Td>0.00001</Td>        <!-- derivator time -->
      <u_min>-1.5</u_min>     <!-- minimum output clamp -->
      <u_max>1.5</u_max>      <!-- maximum output clamp -->
    </config>
  </pid-controller>

   <!-- Auto throttle -->
  <pid-controller>
    <name>Auto Throttle (5 sec lookahead)</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/autothrottle</prop>
      <value>autothrottle</value>
    </enable>
    <input>
       <prop>/autopilot/internal/lookahead-5-sec-airspeed-kt</prop> 
<!--      <prop>/velocities/airspeed-kt</prop>
-->    </input>
    <reference>
      <prop>autopilot/settings/target-auto-throttle-speed-kt</prop>
<!--	  <value>129.0</value>-->
    </reference>
    <output>
      <prop>controls/engines/engine[0]/auto-throttle</prop>
    </output>
    <config>
      <Kp>0.1</Kp>            <!-- proportional gain -->
      <beta>1.0</beta>        <!-- input value weighing factor -->
      <alpha>0.1</alpha>      <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>      <!-- input value weighing factor for -->
                              <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>           <!-- integrator time -->
      <Td>0.00001</Td>        <!-- derivator time -->
      <u_min>0.0</u_min>      <!-- minimum output clamp -->
      <u_max>1.0</u_max>      <!-- maximum output clamp -->
    </config>
  </pid-controller>

  <!-- Hold speed by varying pitch trim (Two stage cascading controller) -->
  
  <pid-controller>
    <name>Speed hold (vary pitch trim) Stage #1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>speed-with-pitch-trim</value>
    </enable>
    <input>
      <prop>autopilot/internal/lookahead-10-sec-airspeed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </output>
    <config>
      <Kp>-0.15</Kp>              	<!-- proportional gain -->
      <beta>0.01</beta>           	<!-- input value weighing factor -->
      <alpha>0.1</alpha>         	<!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>          	<!-- input value weighing factor for -->
                                	<!-- unfiltered derivative error -->
      <Ti>10</Ti>              		<!-- integrator time -->
      <Td>0.00001</Td>          	<!-- derivator time -->
      <u_min>-15</u_min>      		<!-- minimum output clamp -->
      <u_max>15</u_max>      		<!-- maximum output clamp -->
    </config>
  </pid-controller>

  <pid-controller>
    <name>Speed hold (vary pitch trim) Stage #2</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>speed-with-pitch-trim</value>
    </enable>
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </reference>
    <output>
      <prop>autopilot/internal/elevon-trim</prop>
    </output>
    <config>
      <Kp>0.15</Kp>        	<!-- proportional gain -->
      <beta>0.001</beta>	<!-- input value weighing factor -->
      <alpha>0.1</alpha>    <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>    <!-- input value weighing factor for -->
                            <!-- unfiltered derivative error -->
      <Ti>1</Ti>          <!-- integrator time -->
      <Td>0.00001</Td>      <!-- derivator time -->
      <u_min>-1.6</u_min>   <!-- minimum output clamp -->
      <u_max>1.6</u_max>    <!-- maximum output clamp -->
    </config>
  </pid-controller>
  
<!-- Hold mach by varying pitch trim (Two stage cascading controller) -->
  
  <pid-controller>
    <name>Mach hold (vary pitch trim) Stage #1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>mach-with-pitch-trim</value>
    </enable>
    <input>
      <prop>autopilot/internal/lookahead-10-sec-mach</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-mach</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </output>
    <config>
      <Kp>-1.0</Kp>              	<!-- proportional gain -->
      <beta>10</beta>          <!-- input value weighing factor -->
      <alpha>0.1</alpha>       	<!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>       	<!-- input value weighing factor for -->
                               	<!-- unfiltered derivative error -->
      <Ti>10</Ti>              	<!-- integrator time -->
      <Td>0.00001</Td>         	<!-- derivator time -->
      <u_min>-15</u_min>      	<!-- minimum output clamp -->
      <u_max>15</u_max>      	<!-- maximum output clamp -->
    </config>
  </pid-controller>

  <pid-controller>
    <name>Mach hold (vary pitch trim) Stage #2</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>mach-with-pitch-trim</value>
    </enable>
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </reference>
    <output>
      <prop>autopilot/internal/elevon-trim</prop>
    </output>
     <config>
      <Kp>0.2</Kp>        	<!-- proportional gain -->
      <beta>1</beta>	<!-- input value weighing factor -->
      <alpha>0.1</alpha>    <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>    <!-- input value weighing factor for -->
                            <!-- unfiltered derivative error -->
      <Ti>1</Ti>          <!-- integrator time -->
      <Td>0.00001</Td>      <!-- derivator time -->
      <u_min>-1.6</u_min>   <!-- minimum output clamp -->
      <u_max>1.6</u_max>    <!-- maximum output clamp -->
    </config>
  </pid-controller>


</PropertyList>
