<?xml version="1.0"?>

<PropertyList>

<fx>

<!-- External Sounds -->
 
 <!-- Engines-->
 <engine>
			<name>engine 1 external</name>
			<path>Sounds/jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
					<property>sim/current-view/internal</property>
					</not>
					<property>engines/engine/running</property>
				</and>
			</condition>
			<orientation>
				<x>0.0</x>
				<y>0.0</y>
				<z>180.0</z>
				<inner-angle>180.0</inner-angle>
				<outer-angle>360.0</outer-angle>
				<outer-gain>0.2</outer-gain>
			</orientation>
			<volume>
				<property>engines/engine/thrust-lbs</property>
				<factor>0.00012</factor>
			</volume>
		</engine>

		<engine>
			<name>engine 2</name>
			<path>Sounds/jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
					<property>sim/current-view/internal</property>
					</not>
					<property>engines/engine[1]/running</property>
				</and>
			</condition>
			<orientation>
				<x>0.0</x>
				<y>0.0</y>
				<z>180.0</z>
				<inner-angle>180.0</inner-angle>
				<outer-angle>360.0</outer-angle>
				<outer-gain>0.2</outer-gain>
			</orientation>
			<volume>
				<property>engines/engine[1]/thrust-lbs</property>
				<factor>0.00012</factor>
			</volume>
		</engine>

		<engine>
			<name>external whine 1</name>
			<path>Aircraft/SeaVixen/Sounds/enginewhine.wav</path>
			<mode>looped</mode>
			<condition>
				<not>
					<property>sim/current-view/internal</property>
				</not>
				<property>engines/engine/running</property>
			</condition>
			<orientation>
				<x>0.0</x>
				<y>-5.0</y>
				<z>0.0</z>
				<inner-angle>50.0</inner-angle>
				<outer-angle>180.0</outer-angle>
				<outer-gain>0.0</outer-gain>
			</orientation>
			<pitch>
				<property>engines/engine/n1</property>
				<ofset>0.7</ofset>
				<factor>.003</factor>
			</pitch>
			<volume>
				<property>engines/engine/n1</property>
				<offset>1.0</offset>
				<factor>-0.008</factor>
				<max>0.6</max>
			</volume>
		</engine>

		<engine>
			<name>external whine 2</name>
			<path>Aircraft/SeaVixen/Sounds/enginewhine.wav</path>
			<mode>looped</mode>
			<condition>
				<not>
					<property>sim/current-view/internal</property>
				</not>
				<property>engines/engine/running</property>
			</condition>
			<orientation>
				<x>0.0</x>
				<y>-5.0</y>
				<z>0.0</z>
				<inner-angle>50.0</inner-angle>
				<outer-angle>180.0</outer-angle>
				<outer-gain>0.0</outer-gain>
			</orientation>
			<pitch>
				<property>engines/engine[1]/n1</property>
				<ofset>0.7</ofset>
				<factor>.003</factor>
			</pitch>
			<volume>
				<property>engines/engine[1]/n1</property>
				<offset>1.0</offset>
				<factor>-0.008</factor>
				<max>0.6</max>
			</volume>
		</engine>

    <!-- Sonic Boom -->
  <sonicboom>
   <name>Sonic Boom</name>
	<mode>once</mode>
   <path>Aircraft/SeaVixen/Sounds/sonicboom.wav</path>
   <condition>
   <and>
	    <greater-than>
	     	<property>/velocities/mach</property>
	     	<value>1.0</value>
	    </greater-than>
	    <equals>
		    <property>/sim/current-view/internal</property>
		    <value>false</value>
		</equals>
	</and>
   </condition>
    <reference-dist>600.0</reference-dist>
    <max-dist>6000.0</max-dist>
  </sonicboom>


<!-- flyby -->
		<flyby>
			<name>fly-by</name>
			<mode>once</mode>
			<path>Aircraft/SeaVixen/Sounds/flyby.wav</path>
			<condition>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>6</value>
				</equals>
				<not>
         	<property>/sim/current-view/internal</property>
	 	<property>/engines/engine/out-of-fuel</property>
     	</not>
		</condition>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.001</factor>
			</volume>
			
		</flyby>
</fx>

</PropertyList>
