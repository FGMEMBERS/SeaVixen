<?xml version="1.0"?>

<!-- fuel port wing tank-->

<PropertyList>

	<path>fuel-flow.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>fuel-Needle1</object-name>
		<property>instrumentation/flowmeter/indicated-fuel-flow-lbspm</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>-130</dep>
			</entry>
			<entry>
				<ind>100</ind>
				<dep>-90</dep>
			</entry>
			<entry>
				<ind>200</ind>
				<dep>-40</dep>
			</entry>
			<entry>
				<ind>300</ind>
				<dep>10</dep>
			</entry>
			<entry>
				<ind>400</ind>
				<dep>60</dep>
			</entry>
			<entry>
				<ind>500</ind>
				<dep>100</dep>
			</entry>
			<entry>
				<ind>600</ind>
				<dep>130</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- Digits -->
	<animation>
		<type>textranslate</type>
		<object-name>digit</object-name>
		<property>instrumentation/flowmeter/indicated-fuel-used-lbs</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-tens</object-name>
		<property>instrumentation/flowmeter/indicated-fuel-used-lbs</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-hundreds</object-name>
		<property>instrumentation/flowmeter/indicated-fuel-used-lbs</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>digit-thousands</object-name>
		<property>instrumentation/flowmeter/indicated-fuel-used-lbs</property>
		<factor>0.001</factor>
		<step>1000</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
