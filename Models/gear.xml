<?xml version="1.0"?>

<!-- Gear Position Indicator -->
<PropertyList>
	
	<path>gear.ac</path>
	
	<!-- Port Indicator Lights -->
	<animation>
		<type>material</type>
		<object-name>port-green-1</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/port-green[0]</factor-prop>
			<red>0.0</red>
			<green>1</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>port-green-2</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/port-green[1]</factor-prop>
			<red>0.0</red>
			<green>1</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>port-red</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/port-red</factor-prop>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
		</emission>
	</animation>
	
	<!-- Nose Indicator Lights -->
	<animation>
		<type>material</type>
		<object-name>nose-green-1</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/nose-green[0]</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>nose-green-2</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/nose-green[1]</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>nose-red</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/nose-red</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<!-- Starboard Indicator Lights -->
	<animation>
		<type>material</type>
		<object-name>stbd-green-1</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/stbd-green[0]</factor-prop>
			<red>0</red>
			<green>1</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>stbd-green-2</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/stbd-green[1]</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>stbd-red</object-name>
		<emission>
			<factor-prop>sim/model/lightning/lights/stbd-red</factor-prop>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<!-- Day / Night knob -->
	<animation>
		<type>rotate</type>
		<object-name>knob_night_day</object-name>
		<property>controls/switches/dayNight</property>
		<factor>90</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- Panel Lighting -->
	<animation>
		<type>material</type>
		<object-name>bezel</object-name>
		<object-name>face</object-name>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
